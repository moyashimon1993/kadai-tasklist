<% if logged_in? %>
  <p>ログイン完了ユーザー:<%=current_user.name %></p>
  <h1>タスクリスト一覧</h1>
  <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>タスク</th>
          <th>状態</th>
        </tr>
      </thead>
    <tbody>
      <% @tasks.each do |tasks| %>
        <tr>
          <td><%= link_to tasks.id, tasks %></td>
          <td><%= tasks.content %></td>
          <td><%= tasks.status%></td>
        </tr>
        <% end %>
    </tbody>
    </table>
  <% end %>
  
  <%= link_to '新規作成', new_task_path, class: 'btn btn-primary btn-sm' %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcom to the tasklist</h1>
      <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>

